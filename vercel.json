{
  "version": 2,
  "builds": [
    {
      "src": "handler.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/handler.py"
    }
  ],
  "env": {
    "DJANGO_SECRET_KEY": "your-production-secret-key",
    "DEBUG": "False",
    "ALLOWED_HOSTS": "btamluniverse.vercel.app,localhost"
  }
}